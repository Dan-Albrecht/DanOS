{
    // https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "custom",
            "name": "Debug from Windows",
            "targetCreateCommands": [
                // "target create ${workspaceRoot}/target/x86_64-unknown-none/release/kernel64.strippedWithDebugLink"
                "target create ${workspaceRoot}/target/x86_64-unknown-none/debug/kernel64.strippedWithDebugLink"
            ],
            "processCreateCommands": [
                "gdb-remote localhost:3333"
            ]
        },
        {
            "type": "gdb",
            "request": "attach",
            "name": "Debug from WSL via GDB",
            "executable": "${workspaceRoot}/target/x86_64-unknown-none/debug/kernel64.strippedWithDebugLink",
            // Find host via:
            // ip route show | grep -i default | awk '{ print $3}'
            "target": "172.19.176.1:3333",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
        },
    ]
}
